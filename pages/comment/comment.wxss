/* pages/comment/comment.wxss */
@import "../../template/template.wxss";

page {
  background: #fff;
}

.commentbbtn {
  margin: 0 30rpx 40rpx;
  background: #ef5b5b;
  padding: 20rpx 0;
  color: #fff;
  text-align: center;
}

.tab {
  padding: 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
  border-bottom: 1px solid #e6e6e6;
}

.tab>view {
  width: 30%;
  margin: 8rpx 1.65%;
  font-size: 30rpx;
  padding: 10rpx 0;
  border-radius: 15rpx;
  border: 1px solid #aaa;
  box-sizing: border-box;
}

.tab>view.active {
  border-color: #b54545;
  color: #b54545;
}
